<!DOCTYPE html>
<html>
<body>
	<h1>Food</h1>
  <%if (error != "") { %>
    <font color="red"><%= error %><p>
  <% } %>
  <table>
	  <tr>
	  	<th>Area of campus    |</th>
	  	<th>Location    |</th>
	  	<th>Type of food    |</th>
	  	<th>Notes	|</th>
	  	<th>Time posted</th>
	  </tr>
	  <%for (var i = 0; i < food.length; i++) {%>
	    <tr>
	    	<td><%= food[i] %></td>
	    	<td><%= info[i].location %></td>
	    	<td><%= info[i].type %></td>
	    	<td><%= info[i].description %></td>
	    	<td><%= time[i] %></td>
	    </tr>
	  	<% } %>
  </table>
  <form action="/addfood" method="post">
  	<div>
    	<input type="text" name="area" placeholder="Area of campus">
    	<input type="text" name="loc" placeholder="Location">
	</div>
	<div>
    	<input type="text" name="type" placeholder="Type of food">
    	<input type="text" name="notes" placeholder="Additional notes">
	</div>
    <div>
    	<input type="submit" value="Add">
    </div>
  </form>
  <a href="/logout">Logout</a>
</body>
</html>